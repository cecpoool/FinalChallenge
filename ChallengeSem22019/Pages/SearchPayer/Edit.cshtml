@page
@model ChallengeSem22019.Pages.SearchPayer.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Game</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Game.ID" />
            <div class="form-group">
                <label asp-for="Game.Team1" class="control-label"></label>
                <input asp-for="Game.Team1" class="form-control" />
                <span asp-validation-for="Game.Team1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Game.Team2" class="control-label"></label>
                <input asp-for="Game.Team2" class="form-control" />
                <span asp-validation-for="Game.Team2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Game.Venue" class="control-label"></label>
                <input asp-for="Game.Venue" class="form-control" />
                <span asp-validation-for="Game.Venue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Game.TimeOfDate" class="control-label"></label>
                <input asp-for="Game.TimeOfDate" class="form-control" />
                <span asp-validation-for="Game.TimeOfDate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Game.Paid" /> @Html.DisplayNameFor(model => model.Game.Paid)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Game.Payer" class="control-label"></label>
                <input asp-for="Game.Payer" class="form-control" />
                <span asp-validation-for="Game.Payer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Game.CourtFees" class="control-label"></label>
                <input asp-for="Game.CourtFees" class="form-control" />
                <span asp-validation-for="Game.CourtFees" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
